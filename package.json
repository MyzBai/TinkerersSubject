{
  "scripts": {
    "dev": "npm-run-all --parallel watch:sass watch:esbuild",
    "watch:esbuild": "npx esbuild src/main.ts --bundle --sourcemap --target=\"chrome58,firefox57,safari11,edge29\" --outfile=\"./public/dist/main.js\" --watch",
    "build:esbuild": "npx esbuild src/main.ts --bundle --minify --sourcemap --target=\"chrome58,firefox57,safari11,edge29\" --outfile=\"public/dist/main.js\"",
    "watch:sass": "npx sass src/styles/style.scss public/dist/style.css --watch",
    "build:sass": "npx sass src/styles/style.scss public/dist/style.css"
  },
  "type": "module",
  "dependencies": {
    "ajv": "^8.11.2",
    "localforage": "^1.10.0"
  },
  "devDependencies": {
    "esbuild": "^0.15.16",
    "npm-run-all": "^4.1.5",
    "sass": "^1.56.1",
    "typescript": "^4.9.3"
  }
}
