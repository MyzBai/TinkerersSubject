{
  "scripts": {
    "dev": "npm-run-all --parallel sass esbuild",
    "build": "esbuild ./src/main.ts --outfile=./build/main.min.js --bundle --minify",
    "esbuild": "node esbuild.js",
    "sass": "sass ./src/styles/style.scss ./public/dist/style.css --watch",
    "build:sass": "sass ./src/styles/style.scss ./public/dist/style.css",
    "build:esbuild": "npx esbuild src/main.ts --bundle --minify --sourcemap --target=\"chrome58,firefox57,safari11,edge29\" --outfile=\"public/dist/main.js\""
  },
  "type": "module",
  "dependencies": {
    "ajv": "^8.11.2"
  },
  "devDependencies": {
    "esbuild": "^0.15.16",
    "npm-run-all": "^4.1.5",
    "sass": "^1.56.1",
    "typescript": "^4.9.3"
  }
}
