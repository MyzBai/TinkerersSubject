{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "schemas/gconfig/definitions/definitions.schema.json",
    "definitions": {
        "name": {
            "type": "string",
            "pattern": "^[A-Za-z 0-9]{3,32}$"
        },
        "text": {
            "type": "string",
            "maxLength": 2048,
            "pattern": "^[A-Za-z 0-9 .,!*\\[\\]()/=%&{}?\\-:;'\\s]*$"
        },
        "levelReq": {
            "type": "integer",
            "default": 1,
            "minimum": 1
        },
        "goldCost": {
            "type": "integer",
            "default": 0,
            "minimum": 0,
            "description": "Gold required to unlock"
        },
        "attackSpeed": {
            "type": "number",
            "minimum": 0.001,
            "maximum": 10,
            "default": 1,
            "description": "Number of attacks per second"
        }
    }
}
