{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "schemas/gconfig/definitions/components/companions.schema.json",
    "type": "object",
    "definitions": {
        "companions": {
            "type": "object",
            "required": ["levelReq", "list"],
            "properties": {
                "levelReq": {
                    "$ref": "../../gameConfig.schema.json#/definitions/levelReq"
                },
                "list": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/companion"
                            },
                            {
                                "type": "array",
                                "minItems": 1,
                                "items": [
                                    {
                                        "allOf": [
                                            {
                                                "type": "object",
                                                "required": ["levelReq"]
                                            },
                                            {
                                                "$ref": "#/definitions/companion"
                                            }
                                        ]
                                    }
                                ],
                                "additionalItems": {
                                    "allOf": [
                                        {"$ref": "#/definitions/companion"}
                                    ]
                                }
                            }
                        ]
                    }
                }
            }
        },
        "companion": {
            "type": "object",
            "required": [
                "name",
                "attackSpeed",
                "baseDamageMultiplier",
                "mods",
                "goldCost"
            ],
            "properties": {
                "name": {
                    "$ref": "../../gameConfig.schema.json#/definitions/name"
                },
                "levelReq": {
                    "$ref": "../../gameConfig.schema.json#/definitions/levelReq"
                },
                "attackSpeed": {
                    "$ref": "../../gameConfig.schema.json#/definitions/levelReq"
                },
                "baseDamageMultiplier": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 100,
                    "description": "A multiplier used to balance the companion's damage. A value of 100 is 100% of base damage."
                },
                "mods": {
                    "type": "array",
                    "items": {"$ref": "../mods.schema.json#/definitions/mod"}
                },
                "goldCost": {
                    "$ref": "../../gameConfig.schema.json#/definitions/goldCost"
                }
            }
        }
    }
}
